<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarSize">@dimen/actionBarSize</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnim</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>

    <!-- 使用style方式定义activity切换动画 -->
    <style name="ActivityAnim">
        <item name="android:activityOpenEnterAnimation">@anim/push_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
    </style>

    <!-- 弹出框动画 -->
    <!-- 从上往下 -->
    <style name="Animation.Popup.Top" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_top_in</item>
        <item name="android:windowExitAnimation">@anim/popup_top_out</item>
    </style>
    <!-- 从下往上 -->
    <style name="Animation.Popup.Bottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/popup_bottom_out</item>
    </style>
    <!--  从右往左  -->
    <style name="Animation.Popup.Right" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_right_in</item>
        <item name="android:windowExitAnimation">@anim/popup_right_out</item>
    </style>

    <!-- 对话框 -->
    <style name="Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Base.AutoRecyclerStyle" parent="">
        <item name="loadTextNull">@string/no_data</item>
        <item name="loadTextError">@string/loaded_fail</item>
        <item name="loadTextColor">#FF666666</item>
        <item name="loadImageNull">@drawable/ic_load_error</item>
        <item name="loadImageError">@drawable/ic_load_error</item>
        <item name="swipeRefreshColor">@color/swipeRefreshColor</item>
    </style>

    <style name="Base.HeaderView" parent="" />

    <style name="ViewStyle.Shadow" parent="" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ImageGroupStyle">
        <item name="childBackground">@drawable/shape_bg_image_item</item>
        <item name="dividerPadding">8dp</item>
        <item name="childMaxCount">5</item>
        <item name="lineMaxCount">3</item>
    </style>

    <style name="ImageGroupStyle.Add">
        <item name="addViewIcon">@drawable/selector_btn_add</item>
        <item name="addViewBackground">@drawable/shape_bg_add_photo_p</item>
    </style>
</resources>