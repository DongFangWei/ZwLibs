<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NavigationItem">
        <attr name="android:text" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:src" />
        <attr name="srcCompat" />
        <attr name="textAppearance" format="reference" />
        <attr name="iconTextSpacing" format="dimension" />
        <attr name="iconPadding" format="dimension" />
        <attr name="iconPaddingStart" format="dimension" />
        <attr name="iconPaddingEnd" format="dimension" />
        <attr name="iconPaddingTop" format="dimension" />
        <attr name="iconPaddingBottom" format="dimension" />
        <attr name="iconSize" format="dimension" />
        <attr name="iconBackground" format="reference" />
        <attr name="badgeNum" format="integer" />
        <attr name="badgeColor" format="color|reference" />
        <attr name="badgeTextColor" format="color|reference" />
        <attr name="maxBadgeNum" format="integer" />
    </declare-styleable>

    <declare-styleable name="HeaderView">
        <attr name="title" />
        <attr name="titleTextColor" />
        <attr name="titleTextAppearance" />
        <attr name="titleEllipsize">
            <enum name="none" value="0" />
            <enum name="start" value="1" />
            <enum name="middle" value="2" />
            <enum name="end" value="3" />
            <enum name="marquee" value="4" />
        </attr>
        <attr name="backIcon" format="reference" />
        <attr name="backPadding" format="dimension" />
        <attr name="backShow" format="boolean" />
        <attr name="menuIcon" format="reference" />
        <attr name="menuPadding" format="dimension" />
        <attr name="menuShow" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AutoRecyclerView">
        <attr name="loadTextMarginTop" format="dimension" />
        <attr name="loadTextNull" format="string" />
        <attr name="loadTextError" format="string" />
        <attr name="loadTextColor" format="color" />
        <attr name="loadImageNull" format="reference" />
        <attr name="loadImageError" format="reference" />
        <attr name="loadButtonMarginTop" format="dimension" />
        <attr name="loadButtonTextColor" format="color" />
        <attr name="loadButtonBackground" format="reference" />
        <attr name="loadButtonVisibility">
            <!-- Visible on screen; the default value. -->
            <enum name="visible" value="0x00000000" />
            <!-- Not displayed, but taken into account during layout (space is left for it). -->
            <enum name="invisible" value="0x00000004" />
            <!-- Completely hidden, as if the view had not been added. -->
            <enum name="gone" value="0x00000008" />
        </attr>
        <attr name="swipeRefreshColor" format="color" />
    </declare-styleable>

    <declare-styleable name="LoadErrorView">
        <attr name="errText" format="string" />
        <attr name="android:src" />
        <attr name="srcCompat" />
        <attr name="btnText" format="string" />
    </declare-styleable>

    <declare-styleable name="PasswordView">
        <attr name="passwordType" format="enum">
            <enum name="number" value="0x00000012" />
            <enum name="text" value="0x00000081" />
            <enum name="visible" value="0x00000091" />
            <enum name="web" value="0x000000e1" />
        </attr>
        <attr name="showDrawable" format="reference" />
        <attr name="hideDrawable" format="reference" />
        <attr name="drawableSize" />
    </declare-styleable>

    <declare-styleable name="ClearEditText">
        <attr name="clearDrawable" format="reference" />
        <attr name="drawableWidth" format="dimension" />
        <attr name="drawableHeight" format="dimension" />
        <attr name="drawableGravity" format="dimension">
            <enum name="top" value="0x30" />
            <enum name="bottom" value="0x50" />
            <enum name="center_vertical" value="0x10" />
        </attr>
        <attr name="disallowed" format="string" />
    </declare-styleable>

    <!-- ImageGroup -->
    <!-- 子组件的背景 -->
    <attr name="childBackground" format="reference" />
    <!--  子组件的内边距  -->
    <attr name="childPadding" format="dimension" />
    <!--  子组件的内边距-Start  -->
    <attr name="childPaddingStart" format="dimension" />
    <!--  子组件的内边距-End  -->
    <attr name="childPaddingEnd" format="dimension" />
    <!--  子组件的内边距-Top  -->
    <attr name="childPaddingTop" format="dimension" />
    <!--  子组件的内边距-Bottom  -->
    <attr name="childPaddingBottom" format="dimension" />
    <!--  子组件的间隔  -->
    <attr name="dividerPadding" format="dimension" />
    <!--  子组件的间隔-垂直  -->
    <attr name="dividerPaddingVertical" format="dimension" />
    <!--  子组件的间隔-水平  -->
    <attr name="dividerPaddingHorizontal" format="dimension" />
    <!--   子组件的最大数量   -->
    <attr name="childMaxCount" format="integer" />
    <!--   子组件的每行的最大数量   -->
    <attr name="lineMaxCount" format="integer" />
    <declare-styleable name="ImageGroup">
        <attr name="childBackground" />
        <attr name="childPadding" />
        <attr name="childPaddingStart" />
        <attr name="childPaddingEnd" />
        <attr name="childPaddingTop" />
        <attr name="childPaddingBottom" />
        <attr name="dividerPadding" />
        <attr name="dividerPaddingVertical" />
        <attr name="dividerPaddingHorizontal" />
        <attr name="childMaxCount" />
        <attr name="lineMaxCount" />
    </declare-styleable>

    <declare-styleable name="ImageAddGroup">
        <attr name="childBackground" />
        <attr name="childPadding" />
        <attr name="childPaddingStart" />
        <attr name="childPaddingEnd" />
        <attr name="childPaddingTop" />
        <attr name="childPaddingBottom" />
        <attr name="dividerPadding" />
        <attr name="dividerPaddingVertical" />
        <attr name="dividerPaddingHorizontal" />
        <attr name="childMaxCount" />
        <attr name="lineMaxCount" />
        <attr name="addViewIcon" format="reference" />
        <attr name="addViewBackground" format="reference" />
    </declare-styleable>

    <declare-styleable name="NumberView">
        <attr name="addBtnIcon" format="reference" />
        <attr name="minusBtnIcon" format="reference" />
        <attr name="addBtnBackground" format="reference" />
        <attr name="minusBtnBackground" format="reference" />
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="editBackground" format="reference" />
        <attr name="editEnable" format="boolean" />
        <attr name="maxNum" format="integer" />
        <attr name="minNum" format="integer" />
        <attr name="num" format="integer" />
    </declare-styleable>
</resources>