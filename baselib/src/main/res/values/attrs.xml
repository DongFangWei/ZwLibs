<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NavigationItem">
        <attr name="android:text" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:src" />
        <attr name="srcCompat" />
        <attr name="textAppearance" format="reference" />
        <attr name="iconTextSpacing" format="dimension" />
        <attr name="iconPadding" format="dimension" />
        <attr name="iconPaddingStart" format="dimension" />
        <attr name="iconPaddingEnd" format="dimension" />
        <attr name="iconPaddingTop" format="dimension" />
        <attr name="iconPaddingBottom" format="dimension" />
        <attr name="iconSize" format="dimension" />
        <attr name="iconBackground" format="reference" />
        <attr name="badgeNum" format="integer" />
        <attr name="badgeColor" format="color|reference" />
        <attr name="badgeTextColor" format="color|reference" />
        <attr name="maxBadgeNum" format="integer" />
    </declare-styleable>

    <declare-styleable name="HeaderView">
        <attr name="title" />
        <attr name="titleTextColor" />
        <attr name="titleTextAppearance" />
        <attr name="titleEllipsize">
            <enum name="none" value="0" />
            <enum name="start" value="1" />
            <enum name="middle" value="2" />
            <enum name="end" value="3" />
            <enum name="marquee" value="4" />
        </attr>
        <attr name="backIcon" format="reference" />
        <attr name="backPadding" format="dimension" />
        <attr name="backShow" format="boolean" />
        <attr name="menuIcon" format="reference" />
        <attr name="menuPadding" format="dimension" />
        <attr name="menuShow" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AutoRecyclerView">
        <attr name="loadTextNull" format="string" />
        <attr name="loadTextError" format="string" />
        <attr name="loadTextColor" format="color" />
        <attr name="loadImageNull" format="reference" />
        <attr name="loadImageError" format="reference" />
        <attr name="loadButtonTextColor" format="color" />
        <attr name="loadButtonBackground" format="reference" />
        <attr name="swipeRefreshColor" format="color" />
    </declare-styleable>

    <declare-styleable name="LoadErrorView">
        <attr name="errText" format="string" />
        <attr name="android:src" />
        <attr name="srcCompat" />
        <attr name="btnText" format="string" />
    </declare-styleable>

    <declare-styleable name="PasswordView">
        <attr name="passwordType" format="enum">
            <enum name="number" value="0x00000012" />
            <enum name="text" value="0x00000081" />
            <enum name="visible" value="0x00000091" />
            <enum name="web" value="0x000000e1" />
        </attr>
        <attr name="showDrawable" format="reference" />
        <attr name="hideDrawable" format="reference" />
        <attr name="drawableSize" />
    </declare-styleable>

</resources>